---

type Variant = "regular" | "bold";
export interface Props {
  variant?: Variant;
  customClass?: string;
  style?: string;
}

const { variant = "regular", customClass = "", style = "" } = Astro.props;

// Weight classes
const weightClasses: Record<Variant, string> = {
  regular: "font-normal",
  bold: "font-bold",
};

const defaultClasses = "font-fredoka text-primary text-xl leading-[1]";
const finalWeight = weightClasses[variant];

// Build the class string
const classes = [defaultClasses, finalWeight, customClass]
  .filter(Boolean)
  .join(" ");
---

<p class={classes} style={style}>
  <slot />
</p>
